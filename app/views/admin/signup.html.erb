<%
  @title      = "Add a New Organization"
  @bodyclass  = "full_page_background"
%>

<div id="full_screen_form" class="full_page_background">
  <form action="/admin/signup" method="POST">
    <%= token_tag %>
    <h1>Add a New Organization</h1>
    <% if @failure %>
      <div class="form_error">
        <span><%= @failure %></span>
      </div>
    <% end %>
    <% if @success %>
      <div class="form_success">
        <span><%= @success %></span>
      </div>
    <% end %>
    <div class="line">
      <div class="text_input">
        <div class="background">
          <div class="inner">
            <input type="text" name="organization[name]" id="organization_name" value="<%= @params[:organization][:name] %>" />
          </div>
        </div>
      </div>
      <label for="organization_name">
        Organization Name:<br /><span class="example">ex: The Daily Tribune</span>
      </label>
    </div>
    <div class="line">
      <div class="text_input">
        <div class="background">
          <div class="inner">
            <input type="text" name="organization[slug]" id="organization_slug" value="<%= @params[:organization][:slug] %>" />
          </div>
        </div>
      </div>
      <label for="organization_slug">
        Short Name for URLs:<br /><span class="example">ex: daily-tribune</span>
      </label>
    </div>
    <div class="line">
      <div class="text_input">
        <div class="background">
          <div class="inner">
            <input type="text" name="account[email]" id="account_email" value="<%= @params[:account][:email] %>" />
          </div>
        </div>
      </div>
      <label for="account_email">
        Admin Email Address:<br /><span class="example">Email of the account owner</span>
      </label>
    </div>
    <div class="line">
      <div class="text_input left_half">
        <div class="background">
          <div class="inner">
            <input type="text" name="account[first_name]" value="<%= @params[:account][:first_name] %>" />
          </div>
        </div>
      </div>
      <div class="text_input right_half">
        <div class="background">
          <div class="inner">
            <input type="text" name="account[last_name]" value="<%= @params[:account][:last_name] %>" />
          </div>
        </div>
      </div>
      <label>
        Full Name:<br /><span class="example">First name, last name</span>
      </label>
    </div>
    <!--<div class="line">
      <div class="text_input">
        <div class="background">
          <div class="inner">
            <input type="password" name="account[password]" id="account_password" />
          </div>
        </div>
      </div>
      <label for="account_password">
        Password:<br /><span class="example">At least 6 letters long, please</span>
      </label>
    </div>-->
    <div class="line license">
    This form is intended as an admin tool. All users, especially those who plan to upload documents to DocumentCloud should review our terms of service, which can be found at <a href="http://www.documentcloud.org/terms">http://www.documentcloud.org/terms</a>.
    </div>
    <div class="line">
      <div class="minibutton" onclick="$('#full_screen_form form').submit();">Sign Up</div>
    </div>
  </form>
</div>
